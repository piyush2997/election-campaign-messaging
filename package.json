{
  "name": "election-campaign-messaging",
  "version": "1.0.0",
  "description": "A robust backend API system for managing election campaign messaging and voter outreach coordination",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "dev:prod": "NODE_ENV=production ts-node-dev --respawn src/index.ts",
    "dev:test": "NODE_ENV=test ts-node-dev --respawn src/index.ts",
    "dev:config": "ts-node-dev --respawn src/index.ts config:env/dev.env",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:db": "node scripts/test-db-connection.js",
    "test:user": "node scripts/test-user-model.js",
    "test:auth": "node scripts/test-auth.js",
    "test:voter": "node scripts/test-voter-management.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piyush2997/election-campaign-messaging.git"
  },
  "keywords": [],
  "author": "Piyush",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/piyush2997/election-campaign-messaging/issues"
  },
  "homepage": "https://github.com/piyush2997/election-campaign-messaging#readme",
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}